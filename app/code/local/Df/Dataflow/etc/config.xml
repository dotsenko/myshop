<?xml version="1.0"?>
<config>
    <modules>
        <Df_Dataflow>
            <version>1.0.0</version>
        </Df_Dataflow>
    </modules>

	<global>

		<helpers>
			<df_dataflow>
				<class>Df_Dataflow_Helper</class>
			</df_dataflow>
		</helpers>

		<models>
			<df_dataflow>
				<class>Df_Dataflow_Model</class>
			</df_dataflow>

			<dataflow>
				<rewrite>
					<convert_parser_xml_excel>Df_Dataflow_Model_Convert_Parser_Xml_Excel</convert_parser_xml_excel>
				</rewrite>
			</dataflow>
		</models>
	</global>


    <adminhtml>

        <layout>
            <updates>
                <df_dataflow>
                    <file>df/dataflow.xml</file>
                </df_dataflow>
            </updates>
        </layout>
    </adminhtml>


    <default>
        <catalog>
            <downloadable>
                <samples_title>Демо-образцы</samples_title>
                <links_title>Файлы для скачивания</links_title>
            </downloadable>
        </catalog>
    </default>


</config>