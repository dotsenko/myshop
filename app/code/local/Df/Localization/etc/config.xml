<?xml version="1.0"?>
<config>
	<modules>
		<Df_Localization>
			<version>1.0.0</version>
		</Df_Localization>
	</modules>

	<global>
		<blocks>
			<df_localization>
				<class>Df_Localization_Block</class>
			</df_localization>
		</blocks>
		<helpers>
			<df_localization>
				<class>Df_Localization_Helper</class>
			</df_localization>
		</helpers>
		<models>
			<df_localization>
				<class>Df_Localization_Model</class>
			</df_localization>
		</models>
	</global>


    <admin>
        <routers>
            <df_localization>
                <use>admin</use>
                <args>
                    <module>Df_Localization</module>
                    <frontName>df_localization</frontName>
                </args>
            </df_localization>
        </routers>
	</admin>



	<adminhtml>
		<layout>
			<updates>
				<df_localization>
					<file>df/localization.xml</file>
				</df_localization>
			</updates>
		</layout>

    </adminhtml>



	<default>
		<df_localization>

			<frontend>
				<rm_translation__enabled>0</rm_translation__enabled>
				<rm_translation__set_as_primary>0</rm_translation__set_as_primary>
				<translate_dropdown_options>0</translate_dropdown_options>
				<allow_interference>developer-mode</allow_interference>
				<hide_decimals>0</hide_decimals>
			</frontend>

			<admin>
				<rm_translation__enabled>0</rm_translation__enabled>
				<rm_translation__set_as_primary>0</rm_translation__set_as_primary>
				<translate_dropdown_options>0</translate_dropdown_options>
				<allow_interference>developer-mode</allow_interference>
				<hide_decimals>0</hide_decimals>
			</admin>

			<email>
				<rm_translation__enabled>0</rm_translation__enabled>
				<hide_decimals>0</hide_decimals>
			</email>

		</df_localization>
	</default>


</config>